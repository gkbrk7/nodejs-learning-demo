            label(for="name").col-sm-2.col-form-label Product Name:
            .col-sm-10
                input(type="text" name="name").form-control#name

        .form-group.row.my-2
            label(for="price").col-sm-2.col-form-label Price:
            .col-sm-10
                input(type="text" name="price").form-control#price
                
        .form-group.row.my-2
