extends ../layouts/main-layout.pug

block styles 
    link(rel="stylesheet", href="/css/forms.css")

block content 
    form(action="/admin/products" method="POST")
        input(type="hidden" name="id" value=`${data.id}`)
        .form-group.row.my-2
            label(for="name").col-sm-2.col-form-label Product Name:
            .col-sm-10
                input(type="text" name="name" value=`${data.name}`).form-control#name

        .form-group.row.my-2
            label(for="price").col-sm-2.col-form-label Price:
            .col-sm-10
                input(type="text" name="price" value=`${data.price}`).form-control#price
                
        .form-group.row.my-2
            label(for="description").col-sm-2.col-form-label Description:
            .col-sm-10
                textarea(name="description", cols="20", rows="5").form-control#description #{data.description}

        .form-group.row.my-2
            label(for="imageUrl").col-sm-2.col-form-label Image:
            .col-sm-10
                input(type="text" name="imageUrl" value=`${data.imageUrl}`).form-control#image

        .form-group.row
            .offset-2.mt-2
                input(type="submit" value="Update Product").btn.btn-primary