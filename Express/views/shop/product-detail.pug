extends ../layouts/main-layout.pug

block content  
    .row
        .col-md-4
            img(src=`/img/${product.imageUrl}` alt=`${product.name}`).img-fluid
        .col-md-8.pl-4
            p #{product.name}
            hr
            p description : #{product.description}
            p price: #{product.price}
            button(type="submit").btn.btn-primary.btn-lg Add to Cart