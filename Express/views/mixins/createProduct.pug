mixin createProduct(product)
    .col-md-4
        .card
            img(src=`/img/${product.imageUrl}` alt=`${product.description}`).card-img-top
            .card-body
                h4.card-title
                    a(href=`/products/${product.id}`) #{product.name}

                small.text-muted
                    i.fas.fa-lira-sign #{product.price}
                    
            .card-footer.d-flex.justify-content-around
                
                a(href="#").btn.btn-outline-success.btn-sm.mr-3 Add to Cart 

                a(href=`/products/${product.id}`).btn.btn-outline-primary.btn-sm.ml-3 See Detail